<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="150dp"
    android:layout_margin="16dp"
    android:backgroundTint="#f7f8f9"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text=" Site Name "
            android:textColor="#0c0c0c"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sname"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="65dp"
            android:fontFamily="monospace"
            android:text="Username  "
            android:textColor="#0c0c0c"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sname"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="116dp"
            android:fontFamily="monospace"
            android:text="Password "
            android:textColor="#0c0c0c"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/ssname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/sname"
            android:layout_marginEnd="107dp"
            android:backgroundTint="#efefed"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Site Name "
            android:textColor="#0c0c0c"
            android:textIsSelectable="true"
            android:background="@layout/rounded_corners"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/suname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ssname"
            android:layout_centerVertical="true"
            android:backgroundTint="#efefed"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Username"
            android:textColor="#0c0c0c"
            android:textIsSelectable="true"
            android:textStyle="bold|italic"
            android:background="@layout/rounded_corners"
            />

        <TextView
            android:id="@+id/spass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ssname"
            android:layout_alignTop="@+id/pass"
            android:backgroundTint="#efefed"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Password"
            android:textColor="#0c0c0c"
            android:textIsSelectable="true"
            android:textStyle="bold|italic"
            android:background="@layout/rounded_corners"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>